@{
    ViewData["Title"] = "Login";
}
<body class="bg-light d-flex flex-column gap-4 justify-content-center align-items-center vh-100">
    <h2 class="text-center">Welcome to IT Tools Website</h2>
    <div class="card shadow p-4" style="width: 350px;">
        <h3 class="text-center">Login</h3>
        <form>
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input type="text" class="form-control" placeholder="Enter username">
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" class="form-control" placeholder="Enter password">
            </div>
            <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>
        <div class="text-center mt-3">
            <span>Don't have an account?</span>
            <a asp-area="" asp-controller="Home" asp-action="Signup" class="text-decoration-none">Sign up</a>
        </div>
    </div>
</body>
