                                    <div class="emoji me-3" style="cursor: pointer;" onclick="copyEmoji(this)">🏳️‍🌈</div>
                                    <div><div class="fw-bold">Rainbow Flag</div><small>🏳️ + 🌈</small></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<script>
    document.querySelector('input[type="text"]').addEventListener('input', function () {
        const keyword = this.value.toLowerCase();
        const cards = document.querySelectorAll('.emoji-card');

        if (keyword === "") {
            cards.forEach(card => {
                card.parentElement.style.display = 'block';
            });
            document.querySelectorAll('.accordion-collapse').forEach(accordion => {
                accordion.classList.add('show');
            });
        } else {
            cards.forEach(card => {
                const name = card.getAttribute('data-name');
                const accordionBody = card.closest('.accordion-collapse');

                if (name && name.toLowerCase().includes(keyword)) {
                    card.parentElement.style.display = 'block';

                    if (accordionBody) {
                        accordionBody.classList.add('show');
                    }
                } else {
                    card.parentElement.style.display = 'none';
                }
            });

            // Ẩn các accordion không có emoji khớp
            document.querySelectorAll('.accordion-collapse').forEach(accordion => {
                const visibleCards = accordion.querySelectorAll('.emoji-card').length;
                if (visibleCards === 0) {
                    accordion.classList.remove('show');
                }
            });
        }
    });

    function copyEmoji(element) {
        const emoji = element.textContent;
        navigator.clipboard.writeText(emoji).then(() => {
        showToast(`Copied: ${emoji}`);
        });
    }

    function showToast(message) {
        const toast = document.createElement('div');
        toast.textContent = message;
        toast.className = 'position-fixed bottom-0 end-0 m-4 p-2 bg-success text-white rounded shadow';
        toast.style.zIndex = 9999;
        document.body.appendChild(toast);

        setTimeout(() => {
        toast.remove();
        }, 2000);
    }
</script>